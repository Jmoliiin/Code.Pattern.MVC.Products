@using Code.Pattern.Products.Models.Admin.CreateModels;

@model CreateProductModel
@{
    ViewData["Title"] = "CreateProduct";
    var categoryList = ViewBag.CategorysMenu;
    
}

<div class="container">
    <div class="d-flex justify-content-between mt-5">
        
        <partial name="_adminMenuPartial" />
        <div class="col-8">
            @if (categoryList !=null)
            {
                <form asp-action="CreateProduct">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label asp-for="ArticleNumber" class="form-label"></label>
                            <input asp-for="ArticleNumber" class="form-control">
                            <span asp-validation-for="ArticleNumber" class="form-text text-danger"></span>
                        </div>
                        <div class="col-6 mb-3">
                            <label asp-for="ProductName" class="form-label"></label>
                            <input asp-for="ProductName" class="form-control">
                            <span asp-validation-for="ProductName" class="form-text text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ProductDescription" class="form-label"></label>
                            <input asp-for="ProductDescription" class="form-control">
                            <span asp-validation-for="ProductDescription" class="form-text text-danger"></span>
                        </div>
                        <div class="col-4 mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control">
                            <span asp-validation-for="Quantity" class="form-text text-danger"></span>
                        </div>

                        <div class="col-8 mb-3">
                            <label asp-for="ProductPrice" class="form-label"></label>
                            <input asp-for="ProductPrice" class="form-control">
                            <span asp-validation-for="ProductPrice" class="form-text text-danger"></span>
                        </div>
                        <div class="mb-5">
                            <label asp-for="@Model.Category" class="form-label"></label>
                            <select asp-for="@Model.Category" class="form-control">

                                @foreach (var category in ViewBag.CategorysMenu)
                                {
                                    <option>@category.CategoryName</option>
                                }
                            </select>

                        </div>
                        <div class="mb-5">
                            <label asp-for="@Model.DiscountName" class="form-label"></label>
                            <select asp-for="@Model.DiscountName" class="form-control">
                                @if (ViewBag.DiscountsMenu != null)
                                {
                                    @foreach (var discount in ViewBag.DiscountsMenu)
                                    {
                                        <option>@discount.DiscountName</option>
                                    }
                                }
                            </select>

                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>
                        </div>
                    </div>
                </form>
                
            }
            else{
                <p>There are no Categorys created get, Pleace add category to continue with creating product</p>
            }
            
        </div>

    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

